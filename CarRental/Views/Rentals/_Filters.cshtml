@model RentalFiltersModel 

<form class="row" asp-action="Index" asp-controller="Rentals" method="post">
    <div class="form-group col">
        <label asp-for="SortBy" class="control-label"></label>
        <select asp-for="SortBy" class="form-control" asp-items="@ViewBag.SortBy"></select>
    </div>
    <div class="form-group col">
        <label asp-for="SortOrder" class="control-label"></label>
        <select asp-for="SortOrder" class="form-control" asp-items="@Html.GetEnumSelectList<SortOrder>()"></select>
    </div>
    <div class="form-group col">
        <label asp-for="From" class="control-label"></label>
        <input asp-for="From" class="form-control" />
    </div>
    <div class="form-group col">
        <label asp-for="To" class="control-label"></label>
        <input asp-for="To" class="form-control" />
    </div>
    <div class="form-group col-2 align-self-end">
        <button type="submit" class="btn btn-outline-dark">Apply</button>
    </div>
</form>